{
  "global": {
    "log_level": "debug",
    "error_log": "stderr",
    "access_log": "stdout"
  },
  "server": {
    "listen": [
      {
        "port": 8001,
        "name": "test"
      }
    ]
  },
  "internal": [
    {
      "name": "echo",
      "policy_chain": [ "apicast.policy.echo" ]
    }
  ],
  "routes": [
    {
      "name": "test",
      "match": {
        "uri_path": "/test",
        "http_method": "GET"
      },
      "destination": "echo"
    }
  ]
}
