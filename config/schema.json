{
  "$id": "http://rapier.io/config-v1/schema#",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "name": "APIcast config",
  "summary": "Configures the standalone version of APIcast proxy.",
  "description": "Configures the standalone version of APIcast proxy.",
  "version": "1.0.0",
  "type": "object",
  "definitions": {
    "service": {
      "$id": "#service",
      "type": "object",
      "properties": {
        "name": { "type": "string" }
      }
    }
  },
  "properties": {
    "global" : {
      "type": "object",
      "properties": {
        "log_level": {
          "description": "Log level",
          "type": "string",
          "oneOf": [
            {
              "enum": ["debug"],
              "title": "Debug log level."
            },
            {
              "enum": ["silent"],
              "title": "No logging at all."
            }
          ]
        },
        "error_log": {
          "description": "Error Log",
          "type": "string",
          "oneOf": [
            {
              "enum": ["stderr"],
              "title": "stderr."
            },
            {
              "enum": ["silent"],
              "title": "No logging at all."
            }
          ]
        },
        "access_log": {
          "description": "Access Log",
          "type": "string",
          "oneOf": [
            {
              "enum": ["stdout"],
              "title": "stdout."
            },
            {
              "enum": ["silent"],
              "title": "No logging at all."
            }
          ]
        },
        "opentracing_tracer": {
          "description": "Opentracing Tracer",
          "type": "string",
          "oneOf": [
            {
              "enum": ["jaeger"],
              "title": "jaeger."
            },
            {
              "enum": ["other"],
              "title": "Other maybe?."
            }
          ]
        }
      }
    },
    "internal": {
      "type": "array",
      "items": [
        {"$ref": "#/definitions/service"}
      ]
    },
    "routes": {
      "type": "array",
      "title": "Routes",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "match": {
            "type": "object",
            "properties": {
              "uri_path": {
                "type": "string"
              },
              "http_method": {
                "type": "string"
              }
            }
          },
          "destination": {
            "oneOf": [
              { "type": "object", "$ref": "#/definitions/service", "$items": "#/properties/internal" }
            ]
          }
        }
      }
    }
  }
}
